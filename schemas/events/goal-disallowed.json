{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "GoalDisallowed",
    "description": "Event emitted when a goal is disallowed (VAR decision, offside, foul)",
    "type": "object",
    "required": [
        "event_id",
        "event_type",
        "event_version",
        "match_id",
        "occurred_at",
        "received_at",
        "data"
    ],
    "properties": {
        "event_id": {
            "type": "string",
            "format": "uuid"
        },
        "event_type": {
            "type": "string",
            "const": "GOAL_DISALLOWED"
        },
        "event_version": {
            "type": "integer",
            "minimum": 1
        },
        "match_id": {
            "type": "string"
        },
        "competition": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "matchday": {
                    "type": "integer"
                }
            }
        },
        "occurred_at": {
            "type": "string",
            "format": "date-time"
        },
        "received_at": {
            "type": "string",
            "format": "date-time"
        },
        "published_at": {
            "type": "string",
            "format": "date-time"
        },
        "sequence_number": {
            "type": "integer"
        },
        "source": {
            "type": "object",
            "properties": {
                "system": {
                    "type": "string",
                    "enum": [
                        "HAWK_EYE",
                        "OPTA",
                        "REFEREE_COMMS",
                        "MANUAL_OPERATOR",
                        "VAR"
                    ]
                },
                "operator_id": {
                    "type": "string"
                },
                "confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "stadium_gateway_id": {
                    "type": "string"
                }
            }
        },
        "data": {
            "type": "object",
            "required": [
                "original_goal_event_id",
                "reason",
                "team"
            ],
            "properties": {
                "original_goal_event_id": {
                    "type": "string",
                    "format": "uuid",
                    "description": "References the GOAL_SCORED event that is being disallowed"
                },
                "scorer": {
                    "type": "object",
                    "properties": {
                        "player_id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "jersey_number": {
                            "type": "integer"
                        }
                    }
                },
                "team": {
                    "type": "object",
                    "properties": {
                        "team_id": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "side": {
                            "type": "string",
                            "enum": [
                                "HOME",
                                "AWAY"
                            ]
                        }
                    }
                },
                "reason": {
                    "type": "string",
                    "enum": [
                        "OFFSIDE",
                        "FOUL",
                        "HANDBALL",
                        "ENCROACHMENT",
                        "OTHER"
                    ],
                    "description": "Why the goal was disallowed"
                },
                "var_replay_url": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri"
                },
                "match_minute": {
                    "type": "integer"
                },
                "match_period": {
                    "type": "string",
                    "enum": [
                        "FIRST_HALF",
                        "SECOND_HALF",
                        "FIRST_EXTRA",
                        "SECOND_EXTRA"
                    ]
                },
                "score_reverted_to": {
                    "type": "object",
                    "properties": {
                        "home": {
                            "type": "integer"
                        },
                        "away": {
                            "type": "integer"
                        }
                    }
                }
            }
        },
        "metadata": {
            "type": "object",
            "properties": {
                "idempotency_key": {
                    "type": "string"
                },
                "correlation_id": {
                    "type": "string"
                },
                "causation_id": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "ttl_seconds": {
                    "type": "integer"
                }
            }
        }
    }
}